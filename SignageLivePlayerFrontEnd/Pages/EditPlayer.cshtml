@page
@model SignageLivePlayerFrontEnd.Pages.EditPlayerModel
@{
    <div style="margin: 20px auto; width: 300px">
        <h1>Edit Player</h1>
        <form method="post" asp-page-handler="OnPostAsync">
            <div class="form-group">
                <input type="hidden" name="id" value="@Model.Player.Id" />
                <input type="hidden" name="uniqueid" value="@Model.Player.UniqueId" />
                <label asp-for="Player.Name">Name:</label>
                <br />
                <input type="text" class="form-control" id="name"
                       placeholder="name" name="name" asp-for="Player.Name" />
            </div>
            <div class="form-group">
                <label asp-for="Player.SiteAddress1">Site Address 1:</label>
                <br />
                <input type="text" class="form-control" id="siteaddress1" name="siteaddress1" asp-for="Player.SiteAddress1"
                       placeholder="Site address 1" />
                <label asp-for="Player.SiteAddress2">Site Address 2:</label>
                <br />
                <input type="text" class="form-control" id="siteaddress2" name="siteaddress2" asp-for="Player.SiteAddress2"
                       placeholder="Site address 2" />
                <label asp-for="Player.SiteTown">Site Town:</label>
                <br />
                <input type="text" class="form-control" id="sitetown" name="sitetown" asp-for="Player.SiteTown"
                       placeholder="Site town" />
                <label asp-for="Player.SiteCounty">Site County:</label>
                <br />
                <input type="text" class="form-control" id="sitecounty" name="sitecounty" asp-for="Player.SiteCounty"
                       placeholder="Site county" />
                <label asp-for="Player.SitePostCode">Site Postcode:</label>
                <br />
                <input type="text" class="form-control" id="sitepostcode" name="sitepostcode" asp-for="Player.SitePostCode"
                       placeholder="Site postcode" />
                <label asp-for="Player.SiteCountry">Site Country:</label>
                <br />
                <input type="text" class="form-control" id="sitecountry" name="sitecountry" asp-for="Player.SiteCountry"
                       placeholder="Site country" />
                <label asp-for="Player.CheckInFrequency">Check In Frequency:</label>
                <br />
                <input type="text" class="form-control" id="checkinfrequency" name="checkinfrequency" asp-for="Player.CheckInFrequency"
                       placeholder="Check in frequency" />
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <p class="text-danger">@Model.ErrorMessage</p>
                }
            </div>
            <br />
            <button class="btn btn-primary" type="submit">Update</button>
        </form>
    </div>
}
